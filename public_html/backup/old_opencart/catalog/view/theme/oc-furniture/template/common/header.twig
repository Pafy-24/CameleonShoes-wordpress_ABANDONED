<!DOCTYPE html>
<!--[if IE]><![endif]-->
<!--[if IE 8 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie8"><![endif]-->
<!--[if IE 9 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie9"><![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->
<html dir="{{ direction }}" lang="{{ lang }}">
<!--<![endif]-->
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<title>{{ title }}</title>
<base href="{{ base }}" />
{% if description %}
<meta name="description" content="{{ description }}" />
{% endif %}
{% if keywords %}
<meta name="keywords" content="{{ keywords }}" />
{% endif %}
<script src="catalog/view/javascript/jquery/jquery-2.1.1.min.js" type="text/javascript"></script>
<link href="catalog/view/javascript/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen" />
<script src="catalog/view/javascript/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
<link href="catalog/view/javascript/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
<link href="https://fonts.googleapis.com/css?family=Poppins:400,600&display=swap" rel="stylesheet">

<style>
  	#Table_Title{
  	cursor:pointer;
  }
  #Table{
      display:none;
      transition:opacity 1s;
  }
</style>
{% for style in styles %}
<link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" />
{% endfor %}
<link href="catalog/view/theme/oc-furniture/stylesheet/stylesheet.css" rel="stylesheet">
{% for script in scripts %}
<script src="{{ script }}" type="text/javascript"></script>
{% endfor %}
<script src="catalog/view/theme/oc-furniture/js/common.js" type="text/javascript"></script>
<script src="catalog/view/theme/oc-furniture/js/equal.js" type="text/javascript"></script>

{% for link in links %}
<link href="{{ link.href }}" rel="{{ link.rel }}" />
{% endfor %}
{% for analytic in analytics %}
{{ analytic }}
{% endfor %}
</head>
<body>
<div class="h-m">
<header>
    
   
    <img src="https://www.cameleon-shoes.com/image/catalog/icon.jpg" width="50px" height="50px" style="float:left; position:absolute; top:10px; left:10px;"/>
  <div id="top" class="container">
    {{ language }}
       {{ currency }}
    <div id="top-links" class="nav pull-right">
      <ul class="list-inline header_ico">
        <li class="btn-group"><a href="mailto:cameleon_s@yahoo.com"><i class="fa fa-envelope"></i> <span class="hidden-xs hidden-sm hidden-md">cameleon_s@yahoo.com</span></li></a>
        <li class="btn-group"><a href="tel:{{ telephone }}"><i class="fa fa-phone"></i> <span class="hidden-xs hidden-sm hidden-md">{{ telephone }}</span></li></a>
      </ul>
    </div>
  </div>

    
    
    
  <div class="container">
    
      <div class="col-sm-12  col-lg-3" style="display:block; width:100%; text-align:center;">
        <div id="logo">{% if logo %}<a href="{{ home }}"><img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" class="img-responsive logod" /></a>{% else %}
          <h1 class="so-logo-text" ><a  href="{{ home }}"><i class="fa fa-home"></i>   {{ name }}</a></h1>
          {% endif %}</div>
      </div>
    <br />
    <div class="row mt-4">
     
      <div class="col-sm-12 col-lg-6 text-right ">{{ search }}</div>
      <div id="l-nav" class="col-sm-12 col-lg-3 " style="float:right">
     
  <div class="header_ico">
      <div class="btn-group">
      <button class="btn btn-default bg-t dropdown-toggle" data-toggle="dropdown"><a  href="{{ account }}" title="{{ text_account }}" ><i class="fa fa-user c-fa-h"></i></a></button>
        
          <ul class="dropdown-menu">
            {% if logged %}
            <li><a href="{{ account }}">{{ text_account }}</a></li>
            <li><a href="{{ order }}">{{ text_order }}</a></li>
            <li><a href="{{ transaction }}">{{ text_transaction }}</a></li>
            <li><a href="{{ download }}">{{ text_download }}</a></li>
            <li><a href="{{ logout }}">{{ text_logout }}</a></li>
            {% else %}
            <li><a href="{{ register }}">{{ text_register }}</a></li>
            <li><a href="{{ login }}">{{ text_login }}</a></li>
            {% endif %}
          </ul>
       </div>
      {{ cart }}</div>
    </div>
  </div>

  </div>
  <div style="width:100%;">
    {{ menu }} 
  </div>
</header>
</div>

<script>
    function tabel_display(){
        if(document.getElementById("Table").style.display == "block"){
            document.getElementById("Table").style.display = "none";
        } else {
            document.getElementById("Table").style.display = "block";
        }
    };
</script>





